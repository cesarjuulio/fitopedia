<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="228dp"
        android:layout_height="222dp"
        android:layout_marginStart="91dp"
        android:layout_marginTop="59dp"
        android:layout_marginEnd="92dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_foreground" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/explorarPlantasButton"
        android:layout_width="335dp"
        android:layout_height="60dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="500dp"
        android:layout_marginEnd="38dp"
        android:background="@drawable/gradiente_botoes"
        android:fontFamily="@font/open_sans_bold"
        android:text="Explorar Plantas"
        android:textSize="24sp"
        app:backgroundTint="@android:color/transparent"
        app:backgroundTintMode="src_over"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/iaButton"
        android:layout_width="335dp"
        android:layout_height="60dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="585dp"
        android:layout_marginEnd="38dp"
        android:background="@drawable/gradiente_botoes"
        android:fontFamily="@font/open_sans_bold"
        android:text="Consultar IA"
        android:textSize="24sp"
        app:backgroundTint="@android:color/transparent"
        app:backgroundTintMode="src_over"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/sobreButton"
        android:layout_width="335dp"
        android:layout_height="60dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="675dp"
        android:layout_marginEnd="38dp"
        android:background="@drawable/gradiente_botoes"
        android:fontFamily="@font/open_sans_bold"
        android:text="Sobre o projeto"
        android:textSize="24sp"
        app:backgroundTint="@android:color/transparent"
        app:backgroundTintMode="src_over"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="49dp"
        android:layout_marginTop="281dp"
        android:layout_marginEnd="49dp"
        android:fontFamily="@font/open_sans_bold"
        android:text="Fitopédia"
        android:textAlignment="viewStart"
        android:textAllCaps="true"
        android:textColor="#003000"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="319dp"
        android:layout_height="90dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="373dp"
        android:layout_marginEnd="46dp"
        android:text="O App perfeito para explorar o poder das plantas através da Fitoterapia"
        android:textAlignment="center"
        android:textColor="#003000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>