<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAF4"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="228dp"
        android:layout_height="222dp"
        app:srcCompat="@mipmap/ic_launcher_foreground"
        tools:layout_editor_absoluteX="91dp"
        tools:layout_editor_absoluteY="59dp" />

    <Button
        android:id="@+id/explorarPlantasButton"
        android:layout_width="335dp"
        android:layout_height="60dp"
        android:background="@drawable/gradiente_botoes"
        android:fontFamily="@font/open_sans_bold"
        android:text="Explorar Plantas"
        android:textSize="24sp"
        app:backgroundTint=""
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="500dp" />

    <Button
        android:id="@+id/iaButton"
        android:layout_width="335dp"
        android:layout_height="60dp"
        android:background="@drawable/gradiente_botoes"
        android:fontFamily="@font/open_sans_bold"
        android:text="Consultar IA"
        android:textSize="24sp"
        app:backgroundTint=""
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="587dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans_bold"
        android:text="Fitopédia"
        android:textAlignment="viewStart"
        android:textAllCaps="true"
        android:textColor="#003000"
        android:textSize="60sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="49dp"
        tools:layout_editor_absoluteY="281dp" />

    <Button
        android:id="@+id/iaButton"
        android:layout_width="335dp"
        android:layout_height="60dp"
        android:background="@drawable/gradiente_botoes"
        android:fontFamily="@font/open_sans_bold"
        android:text="Sobre o Projeto"
        android:textSize="24sp"
        app:backgroundTint=""
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="675dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="319dp"
        android:layout_height="90dp"
        android:text="O App perfeito para explorar o poder das plantas através da Fitoterapia"
        android:textAlignment="center"
        android:textColor="#003000"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="373dp" />

</androidx.constraintlayout.widget.ConstraintLayout>